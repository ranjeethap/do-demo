{
  "__inputs": [
    { "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginName": "Prometheus", "pluginId": "prometheus" }
  ],
  "title": "Ingress NGINX - Requests & Latency",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "ingress",
        "type": "query",
        "label": "Ingress",
        "datasource": "${DS_PROMETHEUS}",
        "query": "label_values(nginx_ingress_controller_requests{namespace=\"ingress-nginx\"}, ingress)",
        "includeAll": false
      },
      {
        "name": "host",
        "type": "query",
        "label": "Host",
        "datasource": "${DS_PROMETHEUS}",
        "query": "label_values(nginx_ingress_controller_requests{namespace=\"ingress-nginx\", ingress=~\"$ingress\"}, host)",
        "includeAll": true
      }
    ]
  },
  "panels": [
    {
      "type": "graph",
      "title": "Requests/sec by status",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "sum by (status) (rate(nginx_ingress_controller_requests{namespace=\"ingress-nginx\", ingress=~\"$ingress\", host=~\"$host\"}[1m]))",
          "legendFormat": "status {{status}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Success Rate (%)",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "100 * sum(rate(nginx_ingress_controller_requests{namespace=\"ingress-nginx\", ingress=~\"$ingress\", host=~\"$host\", status=~\"2..|3..\"}[1m])) / sum(rate(nginx_ingress_controller_requests{namespace=\"ingress-nginx\", ingress=~\"$ingress\", host=~\"$host\"}[1m]))",
          "legendFormat": "success%"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Upstream Latency p95 (s)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(nginx_ingress_controller_ingress_upstream_latency_seconds_bucket{namespace=\"ingress-nginx\", ingress=~\"$ingress\", host=~\"$host\"}[5m])))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "type": "graph",
      "title": "4xx & 5xx (errors/sec)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "sum by (status) (rate(nginx_ingress_controller_requests{namespace=\"ingress-nginx\", ingress=~\"$ingress\", host=~\"$host\", status=~\"4..|5..\"}[5m]))",
          "legendFormat": "{{status}}"
        }
      ]
    }
  ]
}
